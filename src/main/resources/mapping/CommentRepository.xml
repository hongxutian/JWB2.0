<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- mapper 为根元素节点， 一个namespace对应一个repo -->
<mapper namespace="com.hnu.repository.CommentRepository">

    <select id="getComments" resultType="com.hnu.entity.Comment">
        select * from medical_resources_comment where source_id = #{sourceId}
    </select>

</mapper>