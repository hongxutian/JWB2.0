<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- mapper 为根元素节点， 一个namespace对应一个repo -->
<mapper namespace="com.hnu.repository.MaterialRepository">

    <insert id="insertMaterials" parameterType="java.util.List">
        insert into medical_resources_material
        ( type,count,goods_name,m_id_id)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.type},
            #{item.count},
            #{item.goodsName},
            #{item.m_id_id}
            )
        </foreach>
    </insert>

    <select id="findMaterialById" parameterType="Integer" resultType="com.hnu.entity.Material">
        select * from medical_resources_material where m_id_id = #{id}
    </select>

</mapper>